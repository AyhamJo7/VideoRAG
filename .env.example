# VideoRAG Configuration

# Paths
DATA_DIR=./data
VIDEO_DIR=./data/videos
CHUNK_DIR=./data/chunks
KEYFRAME_DIR=./data/keyframes
TRANSCRIPT_DIR=./data/transcripts
EMBEDDING_DIR=./data/embeddings
CLIP_OUTPUT_DIR=./data/clips

# Video Processing
CHUNK_LENGTH_SEC=30
CHUNK_OVERLAP_SEC=5
KEYFRAME_SAMPLE_RATE=2.0
VIDEO_QUALITY=medium

# Models
CLIP_MODEL=openai/clip-vit-base-patch32
TEXT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
EMBEDDING_DEVICE=cpu

# Vector Database (Milvus)
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=
MILVUS_PASSWORD=
COLLECTION_NAME=videorag_collection
CLIP_DIM=512
TEXT_DIM=384

# Retrieval
TOP_K=5
CLIP_WEIGHT=0.5
TEXT_WEIGHT=0.5
ENABLE_RERANK=false

# LLM (choose one: openai or anthropic)
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# UI
UI_PORT=8501
UI_THEME=light
SHOW_DEBUG_INFO=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/videorag.log
